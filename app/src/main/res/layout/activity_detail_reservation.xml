<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10sp"
        android:background="@drawable/login_button_bk"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/largeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:src="@drawable/standard_ac" />

            <TextView
                android:id="@+id/txtResRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="First Line"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtResSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Second Line"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtNoSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Third Line"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTotPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fourth Line"
                android:textColor="@color/red"
                android:textSize="34sp" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lblNoOfSeat"
                style="@style/parent"
                android:layout_marginTop="@dimen/loginViewsMargin">
                <EditText
                    android:id="@+id/etRefNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/modifiedEditText"
                    android:hint="Number of Seats" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circular_background"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Pay Reservation"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnResCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circular_background"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Cancel Reservation"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
